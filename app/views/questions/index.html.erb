<div class="container">
  <h2 class="title-lg mb">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: { user: user } %>
    <% end %>
  </div>
</div>

<% if @tags.any? %>
  <div class='container mt-sm'>
    <% @tags.each do |hashtag| %>
      <%= link_to "##{hashtag.name}", link_hashtag(hashtag.name) %>
    <% end %>
  </div>
<% end %>

<div class="container mt-sm">
  <h2 class="title-lg">
    <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <p class="text-sm text-grey">
      Вопрос <%= link_to "##{question.id}", question_path(question) %>
      для пользователя <%= link_to display_nickname(question.user), user_path(question.user) %>
    </p>
    <%= render question %>
  </div>
<% end %>
