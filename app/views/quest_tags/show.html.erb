<p style="color: green"><%= notice %></p>

<div class="mt-sm container">
  <h2 class="title-lg mb">
    Все вопросы с таким хэштегом:
    <%= @tag.name %>
  </h2>
  <%= link_to 'Хэштеги', quest_tags_path %>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <p class="text-sm text-grey">
      Вопрос <%= link_to "##{question.id}", question_path(question) %>
      для пользователя <%= link_to display_nickname(question.user), user_path(question.user) %>
    </p>
    <%= render question %>
  </div>
<% end %>
